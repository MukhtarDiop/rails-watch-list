<div class="container my-5">
  <h1 class="mb-4"><i class="fa-solid fa-square-plus"></i> New List</h1>

  <div class="card shadow-sm">
    <div class="card-body">
      <%= form_with model: @list, local: true do |f| %>

        <% if @list.errors.any? %>
          <div class="alert alert-danger">
            <h4 class="alert-heading"><i class="fa-solid fa-triangle-exclamation"></i> <%= pluralize(@list.errors.count, "error") %> prevented this list from being saved:</h4>
            <ul class="mb-0">
              <% @list.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control", placeholder: "Enter list name (e.g. Classics, Sci-Fi...)" %>
        </div>

        <%= f.submit "Create List", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>

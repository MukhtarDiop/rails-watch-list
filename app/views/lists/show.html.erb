<h1><%= @list.name %></h1>

<% @list.bookmarks.each do |bookmark| %>
  <div>
    <%= bookmark.movie.title %>
    <p><%= bookmark.comment %></p>
    <%= link_to "Remove", bookmark_path(bookmark) %>
  </div>
<% end %>

<h2>Add Movie</h2>
<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.input :movie_id, collection: Movie.all %>
  <%= f.input :comment %>
  <%= f.button :submit %>
<% end %>
